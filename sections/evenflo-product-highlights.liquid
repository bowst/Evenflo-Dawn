{{ 'section-product-highlights.css' | asset_url | stylesheet_tag }}

<section class="product-highlights anchor-gradient">
  <div class="content-container page-width color-accent-4 rich-text--full-width content-container--full-width">
    {% if product.type == 'Baby Proofing' %}
      <div class="flex-row">
        <div class="flex-item">
          <h3>Package Includes</h3>
          <strong>{{ product.metafields.sf_products.retail_package_contents }}</strong>
        </div>
        <div class="flex-item">
          <h3>Warranty Type</h3>
          {% assign product_warranty_link = product.metafields.custom.product_warranty_link %}
          {% if product_warranty_link %}
            {% if product.metafields.sf_products.warranty == '1 Year, 6 Month Battery' %}
              <p class="support-links">
                <a href="{{ product_warranty_link }}">Limited 1 Year, 6-Month Battery Warranty</a>
              </p>
            {% endif %}
          {% endif %}
          {% if product.metafields.sf_products.warranty == 'lifetime-limited' %}
            <p class="support-links">
              <a href="https://www.evenflo.com/pages/warranty">Limited Lifetime Warranty</a>
            </p>
          {% endif %}
          {% if product.metafields.sf_products.warranty == '1 Year, Limited' %}
            <p class="support-links">
              <a href="https://www.evenflo.com/pages/warranty">Limited 1 Year Warranty</a>
            </p>
          {% endif %}
          {% if product.metafields.sf_products.warranty == '90-day-limited' %}
            <p class="support-links">
              <a href="{{ product_warranty_link }}">Limited 90-Day Warranty</a>
            </p>
          {% endif %}
        </div>
        <div class="flex-item">
          <h3>Mount Type</h3>
          <strong></strong>
        </div>
        <div class="flex-item">
          <h3>Tested To</h3>
          <strong></strong>
        </div>
      </div>
    {% endif %}
    {% if product.type == 'Car Seat' %}
      <div class="flex-row">
        <div class="flex-item">
          <h3>Child Fit</h3>
          <strong>Weight:</strong>
          {{ product.metafields.sf_products.child_weight_min }} -
          {{ product.metafields.sf_products.child_weight_max }} lbs <br>
          <strong>Height:</strong>
          {{ product.metafields.sf_products.child_height_min }} -
          {{ product.metafields.sf_products.child_height_max }} lbs
        </div>
        <div class="flex-item">
          <h3>Product Dimensions</h3>
          <strong>Dimensions:</strong>
          {{ product.metafields.sf_products.assembled_width }} x {{ product.metafields.sf_products.assembled_height }} x
          {{ product.metafields.sf_products.assembled_depth }} in
        </div>
        <div class="flex-item">
          <h3>Modes of Use</h3>
          {{ product.metafields.custom.modes_of_use }}
        </div>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "PDP Highlights",
  "class": "text",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "PDP Highlights"
    }
  ]
}
{% endschema %}
