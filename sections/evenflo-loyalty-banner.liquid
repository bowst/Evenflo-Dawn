<a href="https://www.evenflo.com/pages/spring-into-savings">
  <div style="position: relative;">
    <div class="desktop">
      <img
        width=""
        height=""
        class="desktop"
        src="
          {% if customer.tags contains  "swell_vip_bronze" or customer.tags contains  "swell_vip_silver"%}
              https://cdn.shopify.com/s/files/1/0512/2359/3116/files/desktop_silver_bronze.png?v=1711467356
          {% elsif customer.tags contains "swell_vip_gold" %}
              https://cdn.shopify.com/s/files/1/0512/2359/3116/files/Loyalty-Exclusive_Promo_2024_New_Header_Desktop_1920x450_fb4055ff-fd39-414b-a782-0b3a44bc4090.jpg?v=1711570986
          {% else %}
              https://cdn.shopify.com/s/files/1/0512/2359/3116/files/desktop_normal.png?v=1711467356
          {% endif %}
        "
      >
    </div>

    <div class="mobile">
      <img
        width=""
        height=""
        class="mobile"
        src="
          {% if customer.tags contains  "swell_vip_bronze" or customer.tags contains  "swell_vip_silver"%}
              https://cdn.shopify.com/s/files/1/0512/2359/3116/files/mobile_bronze.png?v=1711468223
          {% elsif customer.tags contains "swell_vip_gold" %}
              https://cdn.shopify.com/s/files/1/0512/2359/3116/files/Loyalty-Exclusive_Promo_2024_New_Header_Mobile_400x500_220b6daa-ca30-4da5-a1ac-81e66edde34a.jpg?v=1711570986
          {% else %}
              https://cdn.shopify.com/s/files/1/0512/2359/3116/files/mobile_normal.png?v=1711468223
          {% endif %}
        "
      >
    </div>

    <div
      style="min-height: 100%; margin: 0; z-index: 20 !important;"
    >
      <div
        style="position: absolute; bottom: 1.2vh; right: 7vw; width: 200px;"
      >
        <a
          style="z-index: 120 !important; position: relative !important; text-decoration: none;"
          href="https://www.evenflo.com/pages/evenflo-promotions"
        >
          <p
            {% comment %} class="EzfySlideshow-subtitle" {% endcomment %}
            style="color: white !important; text-align: right;"
          >
            *Conditions apply. Details
          </p>
        </a>
      </div>
    </div>
  </div>
</a>

<style>
  .mobile,
  .desktop {
    min-width: 100%;
  }

  @media screen and (min-width: 800px) {
    .mobile {
      display: none;
    }
  }

  @media screen and (max-width: 800px) {
    .desktop {
      display: none;
    }
  }
</style>

