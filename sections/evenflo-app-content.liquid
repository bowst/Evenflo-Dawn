<div class="{% if section.settings.include_margins %}page-width{% endif %} two-columns">
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when '@app' -%}
        <div class="column app-block">
          <!-- Render the app block -->
          {% render block %}
        </div>
      {%- when 'text' -%}
        <div class="column text-block">
          <!-- Render the text block -->
          <div class="custom-text-block">
            {{ block.settings.text | newline_to_br }}
          </div>
        </div>
    {%- endcase -%}
  {%- endfor -%}
</div>


{% schema %}
{
  "name": "Evenflo Apps",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text Content",
          "default": "Enter your text here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Evenflo Apps"
    }
  ]
}
{% endschema %}