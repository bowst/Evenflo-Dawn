<section class="app-and-content-section">
  <div class="grid grid--2-cols">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'app' -%}
          <div class="app-block">
            <!-- This is where the 3rd party app will render its content -->
            {{ block.settings.app_custom_text }}
          </div>
        {%- when 'content' -%}
          <div class="content-block">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.heading | escape }}">
            {% endif %}
            <h2>{{ block.settings.heading }}</h2>
            <div class="rich-text">
              {{ block.settings.text }}
            </div>
            {% if block.settings.button_url %}
              <a href="{{ block.settings.button_url }}" class="button">{{ block.settings.button_text }}</a>
            {% endif %}
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</section>


