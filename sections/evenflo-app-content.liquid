{% schema %}
{
  "name": "Evenflo App+Content",
  "class": "app-content",
  "tag": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    }
  ],
  "blocks": [
    {
      "type": "app",
      "name": "3rd Party App",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "app_custom_text",
          "label": "Custom Text for App",
          "default": "Enter your text here"
        }
      ]
    },
    {
      "type": "content",
      "name": "Custom Content",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Content Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Content Heading",
          "default": "Default Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Content Text",
          "default": "<p>Your content here.</p>"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Click Here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default App and Content",
      "category": "Custom",
      "blocks": [
        {
          "type": "app"
        },
        {
          "type": "content"
        }
      ]
    }
  ]
}
{% endschema %}


{% stylesheet %}
  .app-and-content-section .grid {
  display: flex;
  justify-content: space-between;
}

.app-and-content-section .grid--2-cols > div {
  flex-basis: 50%;
  padding: 20px;
}

@media (max-width: 768px) {
  .app-and-content-section .grid {
    flex-direction: column;
  }
}
{% endstylesheet %}

