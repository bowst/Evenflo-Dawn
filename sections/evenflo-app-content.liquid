


<div class="{% if section.settings.include_margins %}page-width{% endif %} two-columns">
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when '@app' -%}
        <div class="column app-block">
          <!-- Render the app block -->
          <!-- Make sure this rendering is handled according to your theme's logic -->
          {{ block.settings | json }}
        </div>
      {%- when 'text' -%}
        <div class="column text-block">
          <!-- Render the text block -->
            {{ block.settings.text }}

            
              <h3 class="inline-richtext">To Get the Discount</h3>
                <p>{{ page.metafields.custom.page_intro_content | newline_to_br }}</p>
      </div>
    {%- endcase -%}
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "Evenflo Apps",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text Content",
          "default": "<p>Enter your text here</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Evenflo Apps"
    }
  ]
}
{% endschema %}
