{% stylesheet %}

  .flex-container {
    display: flex; /* Use flexbox to layout children */
    width: 100%; /* Set the width of the flex container */
}

.flex-item {
    flex: 1; /* Flex-grow property, allows each item to grow equally */
    padding: 10px; /* Padding inside each flex item */
    box-sizing: border-box; /* Includes padding and border in the element's total width and height */
}
{% endstylesheet %}

<div class="{% if section.settings.include_margins %}page-width{% endif %}">
<div class="multicolumn-card content-container">
    <div class="flex-item">
          {%- for block in section.blocks -%}
    {% render block %}
  {%- endfor -%}
    </div>
    <div class="flex-item">
        <!-- Content for the second column -->
        Column 2 Content
    </div>
</div>
</div>



{% schema %}
{
  "name": "t:sections.apps.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.presets.name"
    }
  ]
}
{% endschema %}

