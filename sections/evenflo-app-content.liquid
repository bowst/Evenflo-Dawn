{%- style -%}

  .page-width.two-columns {
  display: flex;
  justify-content: space-between; /* This spreads the two columns to use up the available space */
  align-items: start; /* This aligns items to the top of the container */
}

.page-width.two-columns .column {
  flex: 1; /* Makes each column take up equal space */
  padding: 20px; /* Adds spacing inside each column */
}

/* You might want to add responsiveness */
@media (max-width: 768px) {
  .page-width.two-columns {
    flex-direction: column;
  }
}

.custom-text-block {
  border: 1px solid #ccc;
  padding: 15px;
  font-size: 16px;
  line-height: 1.6;
}

{%- endstyle -%}

<div class="{% if section.settings.include_margins %}page-width{% endif %} two-columns">
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when '@app' -%}
        <div class="column app-block">
          <!-- Render the app block -->
          <!-- Make sure this rendering is handled according to your theme's logic -->
          {{ block.settings | json }}
        </div>
      {%- when 'text' -%}
        <div class="column text-block">
          <!-- Render the text block -->
          <div class="custom-text-block">
            {{ block.settings.text }}
            {{ page.metafields.custom.page_intro_content | richtext }}

            
          </div>
        </div>
    {%- endcase -%}
  {%- endfor -%}
</div>


{% schema %}
{
  "name": "Evenflo Apps",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text Content",
          "default": "<p>Enter your text here</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Evenflo Apps"
    }
  ]
}

{% endschema %}
