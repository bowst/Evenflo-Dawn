{{ 'evenflo-quote-slider-block.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
<style>
   .evenflo-quote-slider-block .swiper {
      width: 100%;
      height: 100%;
  }

  .evenflo-quote-slider-block .swiper-slide {
      display: flex;
      justify-content: center;
      align-items: center;
  }

  .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
  }
</style>

<div class="evenflo-quote-slider-block">
  <div class="page-width">
    <div class="swiper mySwiper evenflo-quote-slider">
      <div class="swiper-wrapper evenflo-quote-slider-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide evenflo-quote-slider-content">
            <div class="evenflo-quote-img-column">
              <div class="evenflo-quote-img">
                <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}">
              </div>
            </div>
            <div class="evenflo-quote-content-column">
              <div class="evenflo-quote-content">
                <h3>{{ block.settings.subtitle }}</h3>
                <h1>{{ block.settings.title }}</h1>
                <p>{{ block.settings.quote_id }}</p>
                <h3>{{ block.settings.name }}</h3>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <!-- Pagination and Navigation -->
      <div class="swiper-pagination"></div>
      <!--
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      -->
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    var swiper = new Swiper(".evenflo-quote-slider-block .mySwiper", {
      slidesPerView: 1,
      spaceBetween: 0,
       pagination: {
        el: ".swiper-pagination",
        clickable: true,
    },
       loop: false
    });
  });
</script>

{% schema %}
{
  "name": "Evenflo Quote Slider",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "slider_block",
      "name": "Evenflo Quote Slide",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slider Image"
        },
        {
          "type": "text",
          "id": "subtitle",
          "default": "REVOLVE360 SLIM",
          "label": "Subtitle"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Economic Swivel Car Seat",
          "label": "Title"
        },
        {
          "type": "inline_richtext",
          "id": "quote_id",
          "default": "Economic Swivel Car Seat",
          "label": "Quote"
        },
        {
          "type": "text",
          "id": "name",
          "default": "Economic Swivel Car Seat",
          "label": "Name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Evenflo Quote Slider",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
