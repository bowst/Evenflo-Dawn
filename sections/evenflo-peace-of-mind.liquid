{{ 'section-peace-of-mind.css' | asset_url | stylesheet_tag }}

<section class="peace-of-mind">
  
  <div class="peace-of-mind__container page-width">
    <div class="peace-of-mind__column">
      <h2 class="h1">{{ section.settings.heading }} </h2>

      {{ section.settings.message }} 
    </div>
    <div class="peace-of-mind__column">
      {{ section.settings.support_content }} 
    </div>
  </div>
  
</section>



{% schema %}
  {
  "name": "Peace Of Mind",
  "class": "text",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "message",
      "label": "Message"
    },
    {
      "type": "html",
      "id": "support_content",
      "label": "Support Content"
    }
  ],
  "presets": [
    {
      "name": "Peace Of Mind"
    }
  ]
}  
{% endschema %}

