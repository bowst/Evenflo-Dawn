{%- # Label: Heading -%}
{{ section.settings.heading }} 

{%- for block in section.blocks -%}
  {%- case block.type -%}

    {%- when 'benefit_list' -%}
      {%- # Label: Description -%}
      {{ block.settings.description }} 

      {%- # Label: Background Image -%}
      {%- assign background_image = block.settings.background_image -%}
      {{ background_image | image_url: width: background_image.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}

      {%- # Label: Icon Image -%}
      {%- assign icon_image = block.settings.icon_image -%}
      {{ icon_image | image_url: width: icon_image.width | image_tag: class: 'add_your_class_here', loading: 'lazy' }}

  {%- endcase -%}
{%- endfor -%}

{% schema %}
  {
  "name": "Evenflo Benefits Shopping",
  "class": "text",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "name": "Benefit List",
      "type": "benefit_list",
      "settings": [
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        },
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Evenflo Benefits Shopping"
    }
  ]
}  
{% endschema %}

