{{ 'section-shopping-benefits.css' | asset_url | stylesheet_tag }}

<section class="shopping-benefits">
  <div class="content-container page-width rich-text--full-width content-container--full-width">
    <h2 class="h1 heading-underline">{{ section.settings.heading }}</h2>

    <div class="flex-row">
      {%- for block in section.blocks -%}
        {%- case block.type -%}

            {%- when 'benefit_list' -%}
            <div class="flex-item">
              <div class="inner">
                {%- # Label: Background Image -%}
                {%- assign background_image = block.settings.background_image -%}
                {{ background_image | image_url: width: background_image.width | image_tag: class: 'background-image', loading: 'lazy' }}

                <div class="content">
                  <div>
                    {{ block.settings.description }}
                  </div>

                  {%- # Label: Icon Image -%}
                  {%- assign icon_image = block.settings.icon_image -%}
                  {{ icon_image | image_url: width: icon_image.width | image_tag: class: 'icon', loading: 'lazy' }}

                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" class="stretched-link"></a>
                  {%- endif -%}
                </div>
              </div>
            </div>

        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
  {
  "name": "Evenflo Benefits Shopping",
  "class": "text",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "name": "Benefit List",
      "type": "benefit_list",
      "settings": [
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Image"
        },
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Evenflo Benefits Shopping"
    }
  ]
}
{% endschema %}

