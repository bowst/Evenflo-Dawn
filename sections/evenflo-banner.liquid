<div class="new-custom-banner" style="background-image: url({{ section.settings.banner_image | img_url: 'master' }});">
  <div class="page-width">
    <div class="heading">
      <h1 style="color: {{ section.settings.text_color }}">
        {{ section.settings.banner_text }} - {{ section.settings.overlay_opacity }}
      </h1>
    </div>
  </div>
</div>
{% stylesheet %}
  .new-custom-banner:after {
    background: rgba(0, 0, 0, 0.{{ section.settings.overlay_opacity }});
  }
{% endstylesheet %}
{% schema %}
{
  "name": "Evenflo Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "banner_text",
      "label": "Banner Text",
      "default": "CHOOSE YOUR GREEN"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#fff"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 1
    }
  ],
    "presets": [
        {
          "name": "EvenFlo Banner"
        }
  ]
}
{% endschema %}
{{ 'section-evenflo-banner.css' | asset_url | stylesheet_tag }}
