{%- # Label: Number of FAQ -%}
{{ section.settings.number_of_faq }}

{% assign faqData = page.metafields.custom.support_page_faq.value | json %}

{% if page.metafields.custom.support_page_faq.value %}
<section class="product-faq">
  <div class="content-container page-width content-container--full-width">
    <div class="collapsible-content isolate" id="questions">
      <div class="collapsible-content__wrapper">
        {% for faqItem in page.metafields.custom.support_page_faq.value %}
          <div class="accordion">
            <details>
              <summary>
                <h3 class="accordion__title">
                  {{ faqItem.question }}
                </h3>
                {% render 'icon-caret' %}
              </summary>

              <div class="accordion__content rtl">
                {{ faqItem.answer }}
              </div>
            </details>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
{% else %}
  <p>No FAQ data found.</p>
{% endif %}





