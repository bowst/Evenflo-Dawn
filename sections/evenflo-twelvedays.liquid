{{ 'section-install.css' | asset_url | stylesheet_tag }}

<section class="full-width">
  <div class="content-container page-width rich-text--full-width content-container--full-width">
    <h2 class="h1 heading-underline">{{ section.settings.heading }}</h2>
    <div class="product__description rte quick-add-hidden">
      {{ section.settings.content }}
    </div>
    <div class="flex-container">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'videos' -%}
            {%- # Label: Html 0 -%}
            <div class="flex-item">
              {{ block.settings.html_0 }}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "twelvedays",
  "class": "text",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Install/Setup",
      "placeholder": "Install/Setup"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    }
  ],
  "blocks": [
    {
      "name": "Videos",
      "type": "videos",
      "settings": [
        {
          "type": "html",
          "label": "Html 0",
          "id": "html_0"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "twelvedays"
    }
  ]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

