{{ 'section-parentlink.css' | asset_url | stylesheet_tag }}

<section class="parentlink">
  <div class="content-container page-width rich-text--full-width content-container--full-width">
    <h2 class="h1">{{ section.settings.heading }}</h2>

    <div class="flex-row">
      <div class="flex-item">
        {{ section.settings.left_content }}
      </div>
      <div class="flex-item">
        {{ section.settings.right_content }}
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
  "name": "Parentlink",
  "class": "text",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Supported By"
    },
    {
      "type": "html",
      "id": "left_content",
      "label": "Left Content",
      "default": "Phone"
    },
    {
      "type": "html",
      "id": "right_content",
      "label": "Right Content",
      "default": "Email"
    }
  ],
  "presets": [
    {
      "name": "Parentlink"
    }
  ]
}
{% endschema %}

