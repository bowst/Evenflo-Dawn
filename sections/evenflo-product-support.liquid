      {% assign number_of_height_modes = product.metafields.sf_activity.number_of_height_modes %}
      {% assign wheel_material = product.metafields.sf_stroller.wheel_material %}
      {% assign stroller_type = product.metafields.sf_stroller.stroller_type %}
      {% assign number_of_cup_holders = product.metafields.sf_products.number_of_cup_holders %}
      {% assign self_standing_fold = product.metafields.sf_stroller.self_standing_fold %}
      {% assign upf_50_sun_protection_canopy = product.metafields.sf_stroller.upf_50_sun_protection_canopy %}
      {% assign lockable_front_wheels = product.metafields.sf_stroller.lockable_front_wheels %}
      {% assign accepts_infant_car_seat = product.metafields.sf_stroller.accepts_infant_car_seat %}
      {% assign accepts_rider_board = product.metafields.sf_stroller.accepts_rider_board %}
      {% assign single_to_double_capable = product.metafields.sf_stroller.single_to_double_capable %}
      {% if number_of_height_modes or wheel_material or stroller_type or number_of_cup_holders %}
