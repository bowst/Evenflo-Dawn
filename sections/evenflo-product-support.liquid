{{ 'section-pdp-support.css' | asset_url | stylesheet_tag }}

{% if product.vendor == 'Evenflo' %}
  {% assign product_vendor = 'vendor-evenflo' %}
{% elsif product.vendor == 'Exersaucer' %}
  {% assign product_vendor = 'vendor-exersaucer' %}
{% elsif product.vendor == 'Evenflo Gold' %}
  {% assign product_vendor = 'vendor-gold' %}
{% elsif product.vendor == 'Rollplay' %}

{% endif %}

{% if product.type == 'Gates' %}
  <section class="pdp-support page-width">
    <div class="pdp-support__container pdp-support">
      <!-- opening for gate -->

      {% assign my_switch = product.metafields.sf_gates.walk_thru_door %}
      {% assign min_opening_size = product.metafields.sf_gates.min_opening_size %}
      {% assign max_opening_size = product.metafields.sf_gates.max_opening_size %}
      {% assign opening_type = product.metafields.sf_gates.opening_type_s_ %}
      {% assign use_case = product.metafields.sf_gates.use_case | split: ',' %}
      {% assign my_tags = product.metafields.sf_gates.mount_type | split: ',' %}
      {% if min_opening_size and max_opening_size and my_tags.size > 0 %}
        <div class="row-title">
          <h3 class="h1 heading-underline">Gate Specifications</h3>
        </div>
        <!-- <div class="feature_divider"></div> -->
        <div class="flex-row">
          <div class="flex-item-small">
            <h3>Opening Size Min</h3>
            {{ min_opening_size }} inches
          </div>
          <div class="flex-item-small">
            <h3>Opening Size Max</h3>
            {{ max_opening_size }} inches
          </div>
          <div class="flex-item-small">
            <h3>Mount Type</h3>
            {% for tag in my_tags %}
              {{ tag -}}
              {%- if tag != my_tags.last %},{% endif %}
            {% endfor %}
          </div>

          <div class="flex-item-small">
            <h3>Opening Type</h3>
            {{ opening_type }}
          </div>
          <div class="flex-item-small">
            <h3>Use Cases</h3>
            {% for tag in use_case %}
              {{ tag -}}
              {%- if tag != use_case.last %},{% endif %}
            {% endfor %}
          </div>
          <div class="flex-item-small">
            <h3>Walk-Thru Door</h3>
            {% if my_switch == 1 %}
              Yes
            {% else %}
              No
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}

{% if product.vendor == 'Exersaucer' %}
  <section class="pdp-support page-width">
    <div class="pdp-support__container pdp-support">
      {% assign tablet_holder = product.metafields.sf_playard.tablet_holder %}
      {% assign toys_entertainment = product.metafields.sf_playard.toys_entertainment %}
      {% assign batteries_required_bassinet = product.metafields.sf_bassinet.batteries_required %}
      {% assign battery_cell_type_bassinet = product.metafields.sf_bassinet.battery_cell_type %}
      {% assign toy_battery_cell_type = product.metafields.sf_activity.battery_cell_type %}
      {% assign my_tags = product.metafields.sf_activity.battery_cell_type | split: ',' %}
      {% assign electronic_toys_features = product.metafields.sf_activity.electronic_toys_features | split: ',' %}
      {% assign child_weight_min_value = product.metafields.sf_products.child_weight_min %}
      {% assign child_weight_max_value = product.metafields.sf_products.child_weight_max %}
      {% assign child_height_min_value = product.metafields.sf_products.child_height_min %}
      {% assign child_height_max_value = product.metafields.sf_products.child_height_max %}
      {% assign number_of_height_modes = product.metafields.sf_activity.number_of_height_modes %}

      {% assign child_age_min_value = product.metafields.sf_products.child_age_min | strip %}

          <div class="row-title">
          <h3 class="h1 heading-underline">{{ collection.title }}  Specifications</h3>
        </div>
          <div class="flex-row pdp-support">
            <div class="flex-item-small">
              <h3>Child Fit</h3>
               <h5>Weight</h5>
                {% if child_weight_min_value %}
                {{ child_weight_min_value }} -
                {% endif %}
                {% if child_weight_max_value %}
                  {{ child_weight_max_value }} lbs
                {% endif %}
  <h5>Height</h5>
                {% if child_height_min_value %}
                  {{ child_height_min_value }} -
                {% endif %}
                {% if child_height_max_value %}
                  {{ child_height_max_value }} in
                {% endif %}
                  <h5>Minimum Age</h5>
                {% if child_age_min_value %}
                  {{ child_age_min_value }}
                {% endif %}
            </div>
            <div class="flex-item-small">
              <h3>Battery Required</h3>
                  {%if batteries_required_bassinet == 1 %}
                  Yes
                  {% else %}
                  No
                  {% endif %}
            </div>
          </div>
    </div>
  </section>
{% endif %}

