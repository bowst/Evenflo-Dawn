


{% assign dynamic_background = section.settings.backGroundColor_hero %}
<style>
  :root {
    --background: {{ dynamic_background }};
  }
</style> 


{% assign has_search_or_links = false %}

{%- for block in section.blocks -%}
  {% if block.type == 'search' or block.type == 'links' %}
    {% assign has_search_or_links = true %}
  {% endif %}
{%- endfor -%}

{% if section.blocks.size > 0 %}
<div class="help-articles-block">
  <div class="help-articles-content page-width center">

    {% if has_search_or_links %}
      <div class="help-article-search-wrapper">
    {% endif %}

    {%- for block in section.blocks -%}


      {%- case block.type -%}


        {%- when 'heading' -%}
          <!-- Block 1: Heading -->
          <h1 class="{{ block.settings.heading_size }}"> {{ block.settings.heading }}</h1>

        {%- when 'search' -%}
          <!-- Block 2: Search Box -->
        <form class="searchBox-wrapper"  onsubmit="searchProducts(1)">
          <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" viewBox="0 0 19 19" fill="none">
            <path d="M12.9375 7.5625C12.9375 5.55859 11.8477 3.73047 10.125 2.71094C8.36719 1.69141 6.22266 1.69141 4.5 2.71094C2.74219 3.73047 1.6875 5.55859 1.6875 7.5625C1.6875 9.60156 2.74219 11.4297 4.5 12.4492C6.22266 13.4688 8.36719 13.4688 10.125 12.4492C11.8477 11.4297 12.9375 9.60156 12.9375 7.5625ZM11.8477 13.3281C10.582 14.3125 9 14.875 7.3125 14.875C3.26953 14.875 0 11.6055 0 7.5625C0 3.55469 3.26953 0.25 7.3125 0.25C11.3203 0.25 14.625 3.55469 14.625 7.5625C14.625 9.28516 14.0273 10.8672 13.043 12.1328L17.7539 16.8086C18.0703 17.1602 18.0703 17.6875 17.7539 18.0039C17.4023 18.3555 16.875 18.3555 16.5586 18.0039L11.8477 13.3281Z" fill="#121212" fill-opacity="0.5"/>
          </svg>
          <input id="searchBox" class="needsclick go648205600 kl-private-reset-css-Xuajs1" type="text"
              name="search" tabindex="0" placeholder="Search"
              style="box-sizing: border-box;border-radius: 0px;padding: 0px 0px 0px 16px;height: 50px;text-align: left;color:
               rgb(0, 0, 0);font-size: 24px;font-weight: 400;letter-spacing: 0px;background-color:
                rgb(255, 255, 255);border: 1px solid rgb(180, 187, 195);width: 100%;">
        </form> 
        {%- when 'links' -%}
          <!-- Block 3: Button Links -->
          <div class="help-article-link-wrapper">
              {% comment %} <a onclick="searchProducts(1)" href="{{ block.settings.linkone }}">{{ block.settings.linkoneName }}</a>
              <a onclick="searchProducts(2)"  href="{{ block.settings.linktwo }}">{{ block.settings.linktwoName }}</a> {% endcomment %}
              <a onclick="searchProducts(1)" href="javascript:void(0)">{{ block.settings.linkoneName }}</a>
              <a onclick="searchProducts(2)"  href="javascript:void(0)">{{ block.settings.linktwoName }}</a>
          </div>


      {%- endcase -%}


    {%- endfor -%}


    {% if has_search_or_links %}
      </div> <!-- Closing the help-article-search-wrapper div -->
    {% endif %}
    
  </div>
</div>
{% endif %}





 

 
    <script>
    
    function searchProducts(type = 1) {
      const searchValue = document.getElementById('searchBox').value;
      if (searchValue?.length < 3) {
        alert('Please input at least three characters');
      }else{
        window.location.href = '/pages/evenflo-faq-search?search=' + encodeURIComponent(searchValue);

      }
    }


      </script>


    {% schema %}
