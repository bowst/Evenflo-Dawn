<script>

  function getPaginatedCategories(){
   
 alert(222222222);
    fetch(evenFloFAQURL+'products/getPaginatedCategories?page_size=10&page=1')
        .then(response => response.json())
        .then(data => {
          const container = document.querySelector('.category-tab-wrapper');
            const categoriesBlock = document.getElementById('categoriesContainer');
            let blocksToShow=categoriesBlock ? categoriesBlock.dataset.categoriesToShow : 3;

            alert(blocksToShow)

    
            data.results.slice(0, blocksToShow).forEach((category,index) => {
                container.innerHTML=""
                const categoryDiv = document.createElement('div');
                categoryDiv.classList.add('tab-header');
                let class= index==0 ? "active" : ""

                categoryDiv.innerHTML=`<button class="${class}">${category?.category_name}</button>`
                
                container.appendChild(categoryDiv);
            });
        })
        .catch(error => console.error('Error fetching categories:', error));
   
  }

  document.addEventListener('DOMContentLoaded', function() {

     getPaginatedCategories();
    });
  </script>







